<div class="container">
  <div class="row">
    <div class="col-mb-5 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model:@user,local:true do |f| %>
        <label for="inputName">Name</label><br />
        <%= f.text_field :name,autofocus:true,id:"inputName",placeholder:"名前" %>
        <div class="mt-3"><%= attachment_image_tag @user,:profile_image, :fill,60,60,fallback:"no_image.jpg" %></div>
        <label for = "inputImage">ProfileImage</label><br />
        <%= f.attachment_field :profile_image,placeholder:"プロフィール画像" %>
        <p class="mt-3"><%= f.submit "変更を保存" %></p>
      <% end %>
    </div>
  </div>
</div>